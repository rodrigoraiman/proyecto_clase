<!DOCTYPE html>
<html>
  <head>
   <title>Second App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body class="no-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<div id="header" style="background-image: url(<%= asset_path 'header.jpg'%>);">

					
					<!-- Nav -->
						<nav id="nav">
							
								
									<ul>
										<li><%= link_to 'Home', pages_index_path %></li>
										<li><%= link_to 'Dropdown', pages_test_path %></li>
									  <li><%= link_to 'Left Sidebar', users_login_path %></li>
										<li><%= link_to 'About Us', pages_about_us_path %></li>
											
									</ul>
						</nav>

				</div>

			  <!-- Main -->
				<div class="wrapper style1">
				  <div class="container">
                    <%=yield%>
          </div>
						
				</div>

		  	<!-- Footer -->
				<div id="footer">
					<div class="container">
						<div class="row">
              <div class="col-12">

							<!-- Copyright -->
									<div class="copyright">
										<ul class="menu">
											<li>&copy; Untitled. All rights reserved.</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
										</ul>
									</div>

							</div>

						</div>
					</div>
				</div>

		</div>

	
	</body>

  <%= javascript_include_tag 'application' %>
</html>